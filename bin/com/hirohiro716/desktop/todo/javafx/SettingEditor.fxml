<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.hirohiro716.*?>
<?import com.hirohiro716.javafx.control.*?>
<?import com.hirohiro716.javafx.control.table.*?>

<AnchorPane fx:id="paneRoot" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
        <VBox spacing="5.0">
            <Label text="基本設定" style="-fx-font-size:120%;" />
            <HBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="ファイラー" minWidth="120.0" alignment="CENTER_RIGHT" />
                <LimitTextField id="filer" />
                <IMEOffButton fx:id="buttonFiler" text="選択" />
            </HBox>
            <HBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="フォントスタイル" minWidth="120.0" alignment="CENTER_RIGHT" />
                <ComboBox fx:id="font_style" />
            </HBox>
            <HBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="フォントサイズ" minWidth="120.0" alignment="CENTER_RIGHT" />
                <LimitTextField fx:id="font_size" prefWidth="70.0" alignment="CENTER_RIGHT" />
            </HBox>
            <HBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="背景色" minWidth="120.0" alignment="CENTER_RIGHT" />
                <LimitTextField fx:id="background" />
            </HBox>
            <HBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="文字色" minWidth="120.0" alignment="CENTER_RIGHT" />
                <LimitTextField fx:id="text_fill" />
            </HBox>
            <HBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="選択行の背景色" minWidth="120.0" alignment="CENTER_RIGHT" />
                <LimitTextField fx:id="selected_row_background" />
            </HBox>
            <HBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="画面オフセット(横)" minWidth="120.0" alignment="CENTER_RIGHT" />
                <LimitTextField fx:id="offset_x" prefWidth="70.0" alignment="CENTER_RIGHT" />
            </HBox>
            <HBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="画面オフセット(縦)" minWidth="120.0" alignment="CENTER_RIGHT" />
                <LimitTextField fx:id="offset_y" prefWidth="70.0" alignment="CENTER_RIGHT" />
            </HBox>
        </VBox>
        <VBox spacing="5.0">
            <Label text="各一覧の項目の幅比率" style="-fx-font-size:120%;" />
            <FlowPane hgap="20.0" vgap="5.0">
                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label text="関連ディレクトリ" alignment="CENTER_RIGHT" />
                    <LimitTextField fx:id="column_width_rate_directory" prefWidth="50.0" alignment="CENTER_RIGHT" />
                </HBox>
                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label text="アイテム数" alignment="CENTER_RIGHT" />
                    <LimitTextField fx:id="column_width_rate_item_count" prefWidth="50.0" alignment="CENTER_RIGHT" />
                </HBox>
                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label text="説明" alignment="CENTER_RIGHT" />
                    <LimitTextField fx:id="column_width_rate_description" prefWidth="50.0" alignment="CENTER_RIGHT" />
                </HBox>
                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label text="削除" alignment="CENTER_RIGHT" />
                    <LimitTextField fx:id="column_width_rate_delete" prefWidth="50.0" alignment="CENTER_RIGHT" />
                </HBox>
                <padding>
                    <Insets top="0.0" right="10.0" bottom="0.0" left="20.0" />
                </padding>
            </FlowPane>
        </VBox>
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <IMEOffButton fx:id="buttonSave" text="保存">
                <padding>
                    <Insets top="10.0" right="20.0" bottom="10.0" left="20.0" />
                </padding>
            </IMEOffButton>
        </HBox>
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
        </padding>
    </VBox>
</AnchorPane>

